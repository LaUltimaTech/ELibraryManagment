```
<!-- HEADER -->
<nav class="navbar orange-bar fixed-top py-2">
    <div class="container justify-content-center">
        <span class="navbar-text h5 text-white mb-0">Standards</span>
    </div>
</nav>

<!-- MAIN FORM -->
<div class="container mt-5">
    <div class="card p-4">
        <h5 class="text-primary text-center mb-4" id="formTitle">Add New Standard</h5>

        <input type="hidden" id="Id" value="0">

        <form id="standardForm">
            <div class="row justify-content-center mb-3">
                <div class="col-md-4">
                    <label class="form-label">Standard Name</label>
                    <input type="text" class="form-control" id="standardName" placeholder="Enter standard name" required>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-3 flex-wrap">
                <button type="button" class="btn btn-primary" onclick="resetForm()">
                    <i class="bi bi-plus-circle"></i> New
                </button>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Save
                </button>
                <button type="button" class="btn btn-secondary" onclick="resetForm()">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
            </div>
        </form>
    </div>

    <div class="card p-4 mt-4">

        <!-- SEARCH -->
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <input type="text" id="searchText" class="form-control" placeholder="Search Standard Name">
                    <button class="btn btn-info" id="searchBtn">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- TABLE -->
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Sr No</th>
                        <th>Standard Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="standardTable"></tbody>
            </table>
        </div>
    </div>
</div>

<div id="notification"></div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    // ================================= LOAD DATA ===================================
    function loadData() {
        $.get("/StandardMaster/GetAll", function (data) {
            let rows = "";
            let i = 1;
            data.forEach(x => {
                rows += `
                    <tr>
                        <td>${i++}</td>
                        <td>${x.standardName ?? x.StandardName}</td>
                        <td>
                            <button class="btn btn-warning btn-sm" onclick="editRecord(${x.id ?? x.Id}, '${x.standardName ?? x.StandardName}')">
                              <i class="bi bi-pencil-square"></i> Update
                            </button>
                            <button class="btn btn-danger btn-sm" onclick="deleteRecord(${x.id ?? x.Id})">
                              <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>`;
            });
            $("#standardTable").html(rows);
        });
    }

    // ================================= SAVE ===================================
    $("#standardForm").submit(function (e) {
        e.preventDefault();

        let obj = {
            Id: $("#Id").val(),
            StandardName: $("#standardName").val()
        };

        $.post("/StandardMaster/Save", obj, function (res) {
            if (res.success) {
                showMsg("Record saved successfully!");
                resetForm();
                loadData();
            }
        });
    });

    // ================================= EDIT ===================================
    function editRecord(id, name) {
        $("#Id").val(id);
        $("#standardName").val(name);
        $("#formTitle").text("Update Standard");
    }

    // ================================= DELETE ===================================
    function deleteRecord(id) {
        if (!confirm("Are you sure you want to delete this record?")) return;

        $.post("/StandardMaster/Delete", { id: id }, function (res) {
            if (res.success) {
                showMsg("Record deleted!");
                loadData();
            }
        });
    }

    // ================================= RESET FORM ===================================
    function resetForm() {
        $("#Id").val(0);
        $("#standardName").val("");
        $("#formTitle").text("Add New Standard");
    }

    // ================================= SEARCH ===================================
    $("#searchBtn").click(function () {
        let search = $("#searchText").val().toLowerCase();

        $("#standardTable tr").filter(function () {
            $(this).toggle($(this).find("td:eq(1)").text().toLowerCase().includes(search));
        });
    });

    // ================================= NOTIFICATION ===================================
    function showMsg(msg) {
        $("#notification").text(msg).fadeIn();

        setTimeout(() => {
            $("#notification").fadeOut();
        }, 2000);
    }

    // Load on start
    loadData();
</script>

</body>
</html>
