
@{
    ViewData["Title"] = "_DashLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background: #f4f6f9;
            overflow-x: hidden;
        }

        /* Sidebar */
        #sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            height: calc(100% - 56px);
            width: 240px;
            background: linear-gradient(180deg, #343a40, #212529);
            color: white;
            overflow-y: auto;
            transition: all 0.3s;
            box-shadow: 2px 0 8px rgba(0,0,0,0.2);
            z-index: 999;
        }

            #sidebar.collapsed {
                width: 70px;
            }

            #sidebar ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

                #sidebar ul li {
                    padding: 12px 20px;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    font-size: 15px;
                    cursor: pointer;
                    border-left: 4px solid transparent;
                    transition: 0.3s;
                }

                    #sidebar ul li:hover {
                        background-color: #495057;
                        border-left: 4px solid #0d6efd;
                    }

                    #sidebar ul li i {
                        font-size: 18px;
                    }

            #sidebar.collapsed .menu-text {
                display: none;
            }

        /* Dropdown submenu */
        .submenu {
            display: none;
            flex-direction: column;
            padding-left: 45px;
            background-color: #2b3035;
        }

            .submenu li {
                padding: 10px;
                font-size: 14px;
            }

                .submenu li:hover {
                    background-color: #343a40;
                    border-left: 4px solid #0d6efd;
                }

        .dropdown-arrow {
            margin-left: auto;
            transition: transform 0.3s;
        }

        .rotate {
            transform: rotate(90deg);
        }

        /* Navbar */
        .navbar-dark {
            background-color: #212529;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            height: 56px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 20px;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 0.5px;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            color: white;
        }

        /* Admin logo dropdown */
        .admin-logo {
            position: relative;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            color: white;
            font-weight: 500;
        }

            .admin-logo img {
                width: 36px;
                height: 36px;
                border-radius: 50%;
                border: 2px solid white;
            }

        .admin-dropdown {
            position: absolute;
            right: 0;
            top: 48px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            display: none;
            flex-direction: column;
            width: 170px;
            z-index: 1000;
            overflow: hidden;
        }

            .admin-dropdown a {
                text-decoration: none;
                color: #333;
                padding: 10px 15px;
                font-size: 15px;
                transition: 0.3s;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .admin-dropdown a:hover {
                    background: #f1f1f1;
                    color: #0d6efd;
                }

        /* Content area */
        #content {
            margin-left: 240px;
            padding: 20px;
            transition: all 0.3s;
            margin-top: 56px;
        }

        #sidebar.collapsed + #content {
            margin-left: 70px;
        }

        iframe {
            width: 100%;
            height: calc(100vh - 100px);
            border: none;
            border-radius: 8px;
            background: white;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-dark fixed-top">
        <button class="btn btn-outline-light" onclick="toggleSidebar()">
            <i class="bi bi-list"></i>
        </button>
        <span class="navbar-brand">Admin Dashboard</span>

        <!-- Admin name + logo -->
        <div class="admin-logo" onclick="toggleAdminMenu()">
            <span>Admin</span>
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Admin">
            <div class="admin-dropdown" id="adminMenu">
                <a href="#"><i class="bi bi-key"></i> Change Password</a>
                <a href="/UserMaster/Login"><i class="bi bi-box-arrow-right"></i> Logout</a>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div id="sidebar">
        <ul class="mt-3">
            <li onclick="loadForm('/forms/home.html')">
                <i class="bi bi-house-door"></i>
                <span class="menu-text">Home</span>
            </li>

            <li onclick="loadForm('/forms/Schools.html')">
                <i class="bi bi-building"></i>
                <span class="menu-text">Schools</span>
            </li>

            <li onclick="loadForm('/forms/Standards.html')">
                <i class="bi bi-person-badge"></i>
                <span class="menu-text">Standards</span>
            </li>

            <li onclick="loadForm('/forms/Division.html')">
                <i class="bi bi-diagram-3"></i>
                <span class="menu-text">Division</span>
            </li>

            <li onclick="loadForm('/forms/Book.html')">
                <i class="bi bi-book"></i>
                <span class="menu-text">Book</span>
            </li>

            <li onclick="loadForm('/forms/BookCategory.html')">
                <i class="bi bi-tags"></i>
                <span class="menu-text">Book Category</span>
            </li>

            <li onclick="loadForm('/forms/Students.html')">
                <i class="bi bi-person-lines-fill"></i>
                <span class="menu-text">Students</span>
            </li>

            <li onclick="loadForm('/forms/Teacher.html')">
                <i class="bi bi-person-video3"></i>
                <span class="menu-text">Teachers</span>
            </li>

            <li onclick="toggleSubmenu(this)">
                <i class="bi bi-bar-chart-line"></i>
                <span class="menu-text">Reports</span>
                <i class="bi bi-chevron-right dropdown-arrow"></i>
            </li>

            <ul class="submenu">
                <li onclick="loadForm('/Reports/StudentDetailsReports.html')">Student Details Report</li>
                <li onclick="loadForm('/Reports/TeacherDetailsReports.html')">Teacher Details Report</li>
                <li onclick="loadForm('/Reports/BookReadStudents.html')">Student Book Read Report</li>
                <li onclick="loadForm('/Reports/BookReadTeachers.html')">Teacher Book Read Report</li>
            </ul>

            <li onclick="loadForm('/forms/Setting.html')">
                <i class="bi bi-gear"></i>
                <span class="menu-text">Setting</span>
            </li>
        </ul>
    </div>

    <!-- Content -->
    <div id="content">
        <iframe id="formFrame" src="/forms/home.html"></iframe>
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        }

        function loadForm(formPath) {
            document.getElementById('formFrame').src = formPath;
        }

        function toggleSubmenu(element) {
            const submenu = element.nextElementSibling;
            const arrow = element.querySelector('.dropdown-arrow');
            const isVisible = submenu.style.display === 'flex';
            submenu.style.display = isVisible ? 'none' : 'flex';
            arrow.classList.toggle('rotate');
        }

        function toggleAdminMenu() {
            const menu = document.getElementById('adminMenu');
            menu.style.display = (menu.style.display === 'flex') ? 'none' : 'flex';
        }

        window.onclick = function (event) {
            if (!event.target.closest('.admin-logo')) {
                document.getElementById('adminMenu').style.display = 'none';
            }
        }
    </script>

</body>
</html>

